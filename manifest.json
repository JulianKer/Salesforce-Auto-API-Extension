{
  "manifest_version": 3,
  "name": "Salesforce Auto-API",
  "version": "1.0",
  "description": "Convierte autom√°ticamente nombres de campos de Salesforce en API Names en snake_case.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
