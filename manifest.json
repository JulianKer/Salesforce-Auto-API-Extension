{
  "manifest_version": 3,
  "name": "Salesforce Auto-API",
  "version": "2.1",
  "description": "Convierte autom√°ticamente nombres de campos de Salesforce en API Names en snake_case.",
  "permissions": [],
  "host_permissions": [
        "https://*.salesforce.com/*",
        "https://*.salesforce-setup.com/*",
        "https://*.lightning.force.com/*"
    ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "/imgs/icon_logo.png"
  },
  "icons": {
    "16": "/imgs/icon_logo.png",
    "48": "/imgs/icon_logo.png",
    "128": "/imgs/icon_logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.salesforce.com/*",
        "https://*.salesforce-setup.com/*",
        "https://*.lightning.force.com/*"
      ],
      "js": ["content/content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
